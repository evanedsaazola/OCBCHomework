<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorAccent">@color/black2</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_8dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen_8dp</item>
        <item name="boxStrokeColor">@color/black2</item>
    </style>

    <style name="CardViewStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/dimen_24dp</item>
        <item name="cornerSizeBottomRight">@dimen/dimen_24dp</item>
    </style>

    <style name="EditTextInputLayoutStyle.HintText" parent="EditTextInputLayoutStyle">
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="hintTextColor">@color/black2</item>
    </style>

    <style name="EditTextInputLayoutStyle.ErrorText" parent="EditTextInputLayoutStyle">
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="errorTextColor">@color/white</item>
    </style>

</resources>